<?xml version="1.0"?>
<!--Authors: see FGAddon Douglas DC6-->
<PropertyList>

<path>hdg.ac</path>

    <animation>
        <type>material</type>
        <object-name>HDGpointer</object-name>
        <object-name>HDGneedle</object-name>
        <emission>
            <red>0.028</red>
            <green>0.014</green>
            <blue>0.007</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>HDGneedle</object-name>
        <property>instrumentation/heading-indicator/indicated-heading-deg</property>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>
</PropertyList>