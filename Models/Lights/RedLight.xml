<?xml version="1.0"?>
<PropertyList>
  
  <!--C46 light - based on dc2, c172p and IDG - A Lebert 2015, 02/2019-->
  <!--ALS Lights-->
  <path>procedural_light.ac</path>
  <nopreview/>

  <effect>
    <inherits-from>light-nav-red</inherits-from>
    <object-name>procedural_light</object-name>
  </effect>

  <animation>
    <type>scale</type>
    <x-offset>0.9</x-offset>
    <y-offset>0.9</y-offset>
    <z-offset>0.9</z-offset>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>procedural_light</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property><!--TRUE if ALS enabled-->
    </condition>
  </animation>
 

<!--Rembrandt and others-->
  <model>
    <path>RedLight.ac</path>
    <name>Light</name>
  </model>
  
  <animation>
    <type>noshadow</type>
    <object-name>Light</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>Light</object-name>
    <spherical type="bool">true</spherical>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Light</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not><!--TRUE if ALS enabled-->
    </condition>
  </animation>
  
  <!--both-->

  <animation>
    <type>select</type>
    <object-name>Light</object-name>
    <object-name>procedural_light</object-name>
    <condition>
	  <and><!--Voltage AND constantOn  OR  Voltage AND BlinkNow-->
	    <greather-than>
		  <property>/systems/electrical/outputs/nav-lights</property>
		  <value>18</value>
		</greather-than>
	    <or>
          <property>/sim/model/lights/nav/state</property>
          <equals>
		    <property>/controls/lighting/nav-int</property>
			<value>2</value>
		  </equals>
		</or>
      </and>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>Light</object-name>
    <object-name>procedural_light</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0.5</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>4</dep>
      </entry>
      <entry>
        <ind>6000</ind>
        <dep>6</dep>
      </entry>
    </interpolation>
  </animation>

</PropertyList>
