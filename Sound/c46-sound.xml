<?xml version="1.0"?>
<PropertyList>

<fx>

<!-- Engine 1 -->
    <crank>
        <name>crank1</name>
        <mode>looped</mode>
        <path>Aircraft/dc6/Sound/starter.wav</path>
        <condition>
            <property>engines/engine[0]/cranking</property>
            <not>
                <property>engines/engine[0]/running</property>
            </not>
        </condition>
        <volume>
                <offset>0.5</offset>
        </volume>
        <position><!-- +X = back / +Y = left / +Z = up-->
            <x>-3.10</x>
            <y>8.35</y>
            <z>-0.3</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </crank>

    <crank>
        <name>cough1</name>
        <path>Aircraft/dc6/Sound/startup.wav</path>
        <property>engines/engine[0]/running</property>
        <volume>
                <offset>0.3</offset>
        </volume>
        <position>
            <x>-3.10</x>
            <y>8.35</y>
            <z>-0.3</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </crank>

    <engine>
        <name>engine1_idle</name>
        <mode>looped</mode>
        <path>Aircraft/dc6/Sound/idle.wav</path>
        <condition>
            <and>
                <property>engines/engine[0]/running</property>
                <less-than>
                    <property>engines/engine[0]/rpm</property>
                    <value>1000</value>
                </less-than>
            </and>
        </condition>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.009</factor>
                <min>0.15</min>
                <max>0.6</max>
                <offset>0.15</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.0004</factor>
                <min>0.1</min>
                <max>2.0</max>
                <offset>0.3</offset>
            </pitch>
        <position>
            <x>-3.10</x>
            <y>8.35</y>
            <z>-0.3</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </engine>

    <engine>
        <name>engine1_running</name>
        <mode>looped</mode>
        <path>Aircraft/dc6/Sound/doublewasp.wav</path>
        <condition>
            <and>
                <property>engines/engine[0]/running</property>
                <greater-than>
                    <property>engines/engine[0]/rpm</property>
                    <value>999.999</value>
                </greater-than>
            </and>
        </condition>
            <volume>
                <property>engines/engine[0]/mp-osi</property>
                <factor>0.009</factor>
                <min>0.15</min>
                <max>0.6</max>
                <offset>0.15</offset>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <factor>0.0004</factor>
                <min>0.1</min>
                <max>2.0</max>
                <offset>0.3</offset>
            </pitch>
        <position>
            <x>-3.10</x>
            <y>8.35</y>
            <z>-0.3</z>
        </position>
        <reference-dist>150.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <rumble>
        <name>rumble</name>
        <mode>looped</mode>
        <path>Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.005</factor>
        </volume>
        <position>
            <x>-9.0</x>
            <y>0</y>
            <z>-1.68</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </rumble>

    <gear>
        <name>gear</name>
        <mode>in-transit</mode>
        <path>Aircraft/dc3/Sounds/gear_move.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <pitch>
            <internal>dt_play</internal>
            <offset>1.0</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>-9.0</x>
            <y>0</y>
            <z>-1.68</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Aircraft/dc3/Sounds/lock.wav</path>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <position>
            <x>-9.0</x>
            <y>0</y>
            <z>-1.68</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/speed-down-fps</property>
            <factor>0.05</factor>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.02</factor>
        </volume>
        <volume>
            <internal>dt_stop</internal>
            <factor>0.05</factor>
            <max>1.0</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.0025</factor>
            <offset>1.2</offset>
        </pitch>
        <position>
            <x>-4.0</x>
            <y>0</y>
            <z>-3.8</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </squeal>

    <flap>
        <name>flaps</name>
        <mode>in-transit</mode>
        <path>Aircraft/dc3/Sounds/flap_move.wav</path>
        <property>surface-positions/flap-pos-norm</property>
        <volume>
            <factor>0.5</factor>
        </volume>
        <position>
            <x>-9.0</x>
            <y>0</y>
            <z>-1.68</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>20.0</max-dist>
    </flap>

    <wind>
        <name>wind</name>
        <mode>looped</mode>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.0015</factor>
            <min>0.01</min>
            <max>0.15</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.25</offset>
        </pitch>
        <position>
            <x>-12.0</x>
            <y>0</y>
            <z>-0.6</z>
        </position>
        <reference-dist>0.5</reference-dist>
        <max-dist>1.0</max-dist>
    </wind>

    <stall>
        <name>stall</name>
        <path>Aircraft/dc3/Sounds/stall_horn.wav</path>
        <property>sim/alarms/stall-warning</property>
        <volume>
            <property>velocities/airspeed-kt</property>
            <min>30.0</min>
        </volume>
        <position>
            <x>-10.0</x>
            <y>0</y>
            <z>-0.6</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </stall>

<!-- no binding yet?
  <click>
   <name>click</name>
   <path>Sounds/click.wav</path>
  </click>
-->
</fx>
</PropertyList>